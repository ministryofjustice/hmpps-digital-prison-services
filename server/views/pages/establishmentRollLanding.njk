{% extends "../partials/layout.njk" %}
{% from "../macros/printLink.njk" import printLink %}
{% from "../macros/establishmentRollStat.njk" import establishmentRollStat %}

{% set wingDesc = wing.userDescription if wing.userDescription else wing.description | capitalize %}
{% set spurDesc = (spur.userDescription if spur.userDescription else spur.description | capitalize) if spur else "" %}
{% set landingDesc = landing.userDescription if landing.userDescription else landing.description | capitalize %}
{% set pageTitle = wingDesc + " - " + (spurDesc + " - " if spurDesc else "") + landingDesc %}
{% set mainClasses = "govuk-body govuk-main-wrapper--auto-spacing" %}
{% set todayStats = establishmentRollCounts.todayStats %}

{% set breadCrumbs = [
    {
        text: 'Digital Prison Services',
        href:  '/'
    },
    {
        text: 'Establishment roll',
        href:  '/establishment-roll'
    }
] %}


{% block content %}
<div class="govuk-width-container govuk-!-margin-top-8">
    <div class="govuk-!-margin-bottom-6">
        <h1 class="govuk-heading-l govuk-!-margin-bottom-0">{{ pageTitle }}</h1>
        {{ printLink(align = "right") }}
    </div>

    <div class="govuk-grid-row govuk-!-margin-bottom-9">
        <div class="govuk-grid-column-three-quarters">
            <table class="govuk-table landing-roll__table">
                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th scope="col" class="govuk-table__header"></th>
                        <th scope="col" class="govuk-table__header">Beds in use</th>
                        <th scope="col" class="govuk-table__header">Currently in cell</th>
                        <th scope="col" class="govuk-table__header">Currently out</th>
                        <th scope="col" class="govuk-table__header">Operational capacity</th>
                        <th scope="col" class="govuk-table__header">Net vacancies</th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">
                    {% for cell in landingRollCounts %}
                        <tr class="govuk-table__row" id="{{ cell.livingUnitId }}">
                            <td class="govuk-table__cell">{{ cell.livingUnitDesc | capitalize }}</td>
                            <td class="govuk-table__cell">{{ cell.bedsInUse }}</td>
                            <td class="govuk-table__cell">{{ cell.currentlyInCell }}</td>
                            <td class="govuk-table__cell">
                                {% if cell.currentlyOut > 0 %}
                                    <a class="govuk-link" href="{{config.serviceUrls.digitalPrisons}}/establishment-roll/{{cell.livingUnitId}}/currently-out">{{cell.currentlyOut}}</a>
                                {% else %} 0 {% endif %}
                            </td>
                            <td class="govuk-table__cell">{{ cell.operationalCapacity }}</td>
                            <td class="govuk-table__cell">{{ cell.netVacancies }}</td>
                        </tr>
                    {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
